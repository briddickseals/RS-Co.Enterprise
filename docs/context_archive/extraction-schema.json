{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "RS&Co. Enterprise Context Extraction Schema",
  "description": "Schema for extracting structured context from CHIEF project transcripts and architecture artifacts. Used by Claude Code to consolidate enterprise knowledge into actionable context files.",
  "version": "1.0.0",
  "created": "2026-02-16",
  "type": "object",
  "required": ["metadata", "source_document", "extracted_entities", "context_blocks"],
  "properties": {
    "metadata": {
      "type": "object",
      "description": "Processing metadata for the extraction",
      "required": ["extraction_date", "schema_version", "source_type", "processor"],
      "properties": {
        "extraction_date": {
          "type": "string",
          "format": "date",
          "description": "ISO date of extraction"
        },
        "schema_version": {
          "type": "string",
          "description": "Version of this extraction schema"
        },
        "source_type": {
          "type": "string",
          "enum": ["transcript", "architecture_doc", "meeting_notes", "strategy_doc", "technical_spec"],
          "description": "Type of source document processed"
        },
        "processor": {
          "type": "string",
          "description": "Agent or system that performed extraction"
        },
        "confidence_score": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "description": "Confidence in extraction completeness (0-1)"
        }
      }
    },
    "source_document": {
      "type": "object",
      "description": "Reference to the original source",
      "required": ["title", "path", "classification"],
      "properties": {
        "title": {
          "type": "string",
          "description": "Document title"
        },
        "path": {
          "type": "string",
          "description": "File path relative to repo root"
        },
        "version": {
          "type": "string",
          "description": "Document version if available"
        },
        "date": {
          "type": "string",
          "format": "date",
          "description": "Document date"
        },
        "classification": {
          "type": "string",
          "enum": ["public", "internal", "confidential", "restricted"],
          "description": "Document classification level"
        }
      }
    },
    "extracted_entities": {
      "type": "object",
      "description": "Named entities extracted from source",
      "properties": {
        "systems": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["name", "status"],
            "properties": {
              "name": { "type": "string" },
              "status": {
                "type": "string",
                "enum": ["live", "configuring", "planned", "retiring", "evaluating", "archived"]
              },
              "platform": { "type": "string" },
              "function": { "type": "string" },
              "system_of_record_for": { "type": "string" }
            }
          }
        },
        "agents": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["name", "platform", "role"],
            "properties": {
              "name": { "type": "string" },
              "platform": { "type": "string" },
              "role": { "type": "string" },
              "tier": {
                "type": "string",
                "enum": ["strategic", "content", "operational", "integration"]
              },
              "responsibilities": {
                "type": "array",
                "items": { "type": "string" }
              }
            }
          }
        },
        "people": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": { "type": "string" },
              "email": { "type": "string" },
              "role": { "type": "string" }
            }
          }
        },
        "brands": {
          "type": "array",
          "items": { "type": "string" },
          "description": "RS&Co. brand verticals"
        },
        "data_flows": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": { "type": "string" },
              "system_of_record": { "type": "string" },
              "trigger": { "type": "string" },
              "path": { "type": "string" },
              "direction": {
                "type": "string",
                "enum": ["unidirectional", "bidirectional"]
              }
            }
          }
        }
      }
    },
    "context_blocks": {
      "type": "array",
      "description": "Structured context blocks extracted from source",
      "items": {
        "type": "object",
        "required": ["domain", "category", "content"],
        "properties": {
          "domain": {
            "type": "string",
            "enum": [
              "architecture",
              "governance",
              "operations",
              "engineering",
              "data",
              "security",
              "decommission",
              "finance",
              "strategy"
            ]
          },
          "category": {
            "type": "string",
            "description": "Sub-category within the domain"
          },
          "content": {
            "type": "string",
            "description": "The extracted context content"
          },
          "actionable": {
            "type": "boolean",
            "description": "Whether this block contains actionable items"
          },
          "dependencies": {
            "type": "array",
            "items": { "type": "string" },
            "description": "Systems or processes this block depends on"
          },
          "status": {
            "type": "string",
            "enum": ["active", "planned", "in_progress", "completed", "blocked"]
          }
        }
      }
    },
    "decisions": {
      "type": "array",
      "description": "Key decisions captured from source",
      "items": {
        "type": "object",
        "properties": {
          "decision": { "type": "string" },
          "rationale": { "type": "string" },
          "impact": { "type": "string" },
          "date": { "type": "string", "format": "date" }
        }
      }
    },
    "action_items": {
      "type": "array",
      "description": "Action items extracted from source",
      "items": {
        "type": "object",
        "properties": {
          "action": { "type": "string" },
          "owner": { "type": "string" },
          "priority": {
            "type": "string",
            "enum": ["critical", "high", "medium", "low"]
          },
          "deadline": { "type": "string" },
          "status": {
            "type": "string",
            "enum": ["pending", "in_progress", "completed", "blocked"]
          }
        }
      }
    }
  }
}
